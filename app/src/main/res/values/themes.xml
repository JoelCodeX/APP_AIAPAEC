<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.AIAPAEC" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Configuración del SplashScreen (Android 12+ con compatibilidad hacia atrás) -->
        <item name="windowSplashScreenBackground">@color/crimson_100</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.AIAPAEC</item>
        <!-- Compatibilidad para Android < 12: color del fondo de la ventana inicial -->
        <item name="android:windowBackground">@color/crimson_100</item>
    </style>
</resources>
